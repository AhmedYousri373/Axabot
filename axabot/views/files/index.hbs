<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5><i class="fa fa-folder-open"></i>
                    File Manager</h5>
                <div class="ibox-tools">
                    &nbsp;<button class="trashfiles btn btn-danger btn-sm" type="button"><i
                            class="fa fa-trash"></i>&nbsp;<span class="bold">Delete (<span
                                class="countcheck">0</span>)</span></button>
                </div>
            </div>
            <div class="ibox-content">
                <div class="m-b-lg">
                    <div class="input-group">
                        <input type="text" id="searchfilebox" placeholder="Search file by name..."
                            class=" form-control">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-white"> Search</button>
                        </span>
                    </div>
                </div>
                <a class="up btn btn-xs btn-white">
                    <i class="fa fa-level-up"></i> Parent Directory
                </a>
                <a class="refresh btn btn-xs btn-white">
                    <i class="fa fa-refresh"></i>
                </a>
                <a class="ckall pull-right btn btn-xs btn-white">
                    <i class="fa fa-bars"></i>
                </a>
                <div class="table-responsive">
                    <div id="processingIndicator"></div>
                    <table class="table table-hover linksholder"></table>
                </div>
            </div>
        </div>
    </div>
</div>
{{> modals/addtask }}
<script>
    [
        "/assets/js/plugins/dataTables/datatables.min.js",
        "/assets/js/jquery.fancybox.min.js"
    ].forEach(function (src) {
        var script = document.createElement('script');
        script.src = src;
        script.async = false;
        document.head.appendChild(script);
    });
</script>