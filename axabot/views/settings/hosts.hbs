<div class="ibox">
    <div class="ibox-title">
        <h5><i class="fa fa-cogs"></i>
            Settings / Hosts</h5>
    </div>
    <div class="ibox-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="tabs-container">
                    {{> settings/tabs }}
                    <div class="tab-content">
                        <div id="host_accounts" class="tab-pane active">
                            <div class="panel-body">
                                <form id="hosts_form" method="POST">
                                    <fieldset class="form-horizontal">
                                        <div class="form-group"><label class="col-sm-2 control-label">Host:</label>
                                            <div class="col-sm-10">
                                                <select name="server" id="hostform" class="selectform form-control ">
                                                    <option value="0" selected>
                                                        -Select Host-
                                                    </option>
                                                    {{#each this.hosts}}
                                                        <optgroup label="{{{rplabel @key}}}">
                                                            {{#each this}}
                                                                <option data-info="{{this.extra.info}}"
                                                                    value="{{this.server}}">{{this.server}}</option>
                                                            {{/each}}
                                                        </optgroup>
                                                    {{/each}}
                                                </select>
                                                <small class="text-danger" id="serverinfo"></small>
                                            </div>
                                        </div>
                                        <div id="dyhostform"></div>
                                    </fieldset>
                                </form>
                                <div class="hr-line-dashed"></div>
                                <center>
                                    <div class="table-responsive">
                                        {{#if this.accounts.length}}
                                            <table class="table table-striped" style="width:90%;">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Host</th>
                                                        <th>
                                                            Using Account
                                                        </th>
                                                        <th>User-ID / Email</th>
                                                        <th></th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each this.accounts}}
                                                        <tr id="{{this._id}}">
                                                            <td style="width:1%;">{{{inc @index}}}. </td>
                                                            <td style="width:20%;"><span
                                                                    class="line">{{{ucwrd this.server}}}</span>
                                                            </td>
                                                            <td style="width:20%;">{{{useAcc}}}</td>
                                                            <td style="width:20%;">{{{this.data.username}}}</td>
                                                            <td style="width:20%;">{{{typefx}}}</td>
                                                            <td style="width:10%;" class="text-navy">
                                                                <button class="editaccount btn btn-success btn-xs"> <i
                                                                        class="fa fa-pencil"></i></button>
                                                                <button class="trashaccount btn btn-danger btn-xs"> <i
                                                                        class="fa fa-trash"></i></button>
                                                            </td>
                                                        </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        {{else}}
                                            <center>
                                                <h5><i class="fa fa-unlock-alt"></i> No User Account saved</h5>
                                            </center>
                                        {{/if}}
                                    </div>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>